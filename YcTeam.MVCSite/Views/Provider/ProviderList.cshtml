@using Webdiyer.WebControls.Mvc
@model Webdiyer.WebControls.Mvc.PagedList<YcTeam.DTO.Master.ProviderDto>

<p>
    @Html.ActionLink("创建供应商", "CreateProvider")
</p>
<table class="table table-bordered table-hover table-striped">
    <thead></thead>
    <tr>
        <th>
            序号
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateTime)
        </th>
        <th>
            操作
        </th>
        <th>
            操作
        </th>
        <th>
            操作
        </th>
    </tr>
    <tbody>
        @{ int i = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(Model.StartItemIndex + i++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateTime)
                </td>
                <td>
                    <a class="btn btn-success btn-xs" href="@Url.Action("ProviderDetails", new {id = item.Id})">
                        详情
                    </a>
                </td>
                <td>
                    <a class="glyphicon glyphicon-pencil" href="@Url.Action("ProviderEdit", new {id = item.Id})"></a>
                </td>
                <td>
                    <a class="glyphicon glyphicon-remove" href="@Url.Action("ProviderDelete", new {id = item.Id})" onclick="return confirm('are you sure?');"></a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="10">
                @Html.Partial("~\\Views\\PageList\\_PageList.cshtml", Model);
            </td>
        </tr>
    </tfoot>
</table>

@section Scripts{@{Html.RegisterMvcPagerScriptResource();}}
